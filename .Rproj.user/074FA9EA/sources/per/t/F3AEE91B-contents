### Exemplo em

```{=html}
<script>
document.addEventListener('DOMContentLoaded', function () {
  const el = document.getElementById('quote-text');

  // Fallback local (sempre dispon√≠vel)
  const localQuotes = [
    { content: "Conhecimento √© poder.", author: "Francis Bacon" },
    { content: "A pr√°tica leva √† perfei√ß√£o.", author: "Prov√©rbio popular" },
    { content: "Errar √© humano; persistir no erro √© burrice.", author: "S√™neca" },
    { content: "A simplicidade √© o √∫ltimo grau de sofistica√ß√£o.", author: "Leonardo da Vinci" },
    { content: "Aprender √© a √∫nica coisa de que a mente nunca se cansa.", author: "Leonardo da Vinci" }
  ];

  // Utilit√°rio para mostrar uma quote local aleat√≥ria
  function showLocalQuote() {
    const q = localQuotes[Math.floor(Math.random() * localQuotes.length)];
    el.innerHTML = `\"${q.content}\" ‚Äî <em>${q.author}</em>`;
  }
  
  showQuote(localQuotes[Math.floor(Math.random() * localQuotes.length)]);
  
  // Exibe JSON da API quotable (formato conhecido)
  function showQuotable(data) {
    if (data && data.content) {
      el.innerHTML = `\"${data.content}\" ‚Äî <em>${data.author || 'Desconhecido'}</em>`;
      return true;
    }
    return false;
  }

  // 1) Tenta API principal (quotable)
  function tryQuotable() {
    return fetch('https://api.quotable.io/random', {cache: "no-store"})
      .then(r => {
        if (!r.ok) throw new Error('status ' + r.status);
        return r.json();
      })
      .then(data => {
        if (!showQuotable(data)) throw new Error('invalid data');
        return true;
      });
  }

  // 2) Se CORS bloquear, tenta via proxy AllOrigins (retorna o body bruto)
  function tryQuotableViaProxy() {
    const encoded = encodeURIComponent('https://api.quotable.io/random');
    const proxyUrl = `https://api.allorigins.win/raw?url=${encoded}`;
    return fetch(proxyUrl, {cache: "no-store"})
      .then(r => {
        if (!r.ok) throw new Error('proxy status ' + r.status);
        return r.json();
      })
      .then(data => {
        if (!showQuotable(data)) throw new Error('invalid proxy data');
        return true;
      });
  }

  // 3) Tenta API alternativa (type.fit - retorna array)
  function tryTypeFit() {
    return fetch('https://type.fit/api/quotes', {cache: "no-store"})
      .then(r => {
        if (!r.ok) throw new Error('status ' + r.status);
        return r.json();
      })
      .then(list => {
        if (!Array.isArray(list) || list.length === 0) throw new Error('empty list');
        const pick = list[Math.floor(Math.random() * list.length)];
        const content = pick.text || pick.content || '';
        const author = pick.author || 'Desconhecido';
        if (!content) throw new Error('no content');
        el.innerHTML = `\"${content}\" ‚Äî <em>${author}</em>`;
        return true;
      });
  }

  // Orquestra tentativas em sequ√™ncia
  (async function getQuote() {
    // Se fetch n√£o est√° dispon√≠vel no ambiente (parece improv√°vel em browser moderno)
    if (typeof fetch !== 'function') {
      showLocalQuote();
      return;
    }

    // Tenta sequ√™ncia: quotable -> proxy -> type.fit -> local
    try {
      await tryQuotable();
      return;
    } catch (err1) {
      // console.warn('quotable failed', err1);
    }

    try {
      await tryQuotableViaProxy();
      return;
    } catch (err2) {
      // console.warn('proxy failed', err2);
    }

    try {
      await tryTypeFit();
      return;
    } catch (err3) {
      // console.warn('type.fit failed', err3);
    }

    // √∫ltimo recurso: local
    showLocalQuote();
  })();

});
</script>
```

