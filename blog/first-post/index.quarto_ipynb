        "# | echo: false \n",
        "# | warning: false \n",
        "\n",
        "import pandas as pd\n",
        "import matplotlib.pyplot as plt\n",
        "import seaborn as sns \n",
        "\n",
        "dados = pd.read_excel(\"../../data/exportation2025.xlsx\", sheet_name=\"Resultado\")\n",
        "agrupado = (dados.groupby([\"Descrição NCM\"])[\"2025 - Valor US$ FOB\"].sum().reset_index().sort_values(by=\"2025 - Valor US$ FOB\",ascending=False))\n",
        "\n",
        "agrupado[\"%\"] = agrupado[\"2025 - Valor US$ FOB\"] / agrupado[\"2025 - Valor US$ FOB\"].sum() * 1 \n",
        "agrupado[\"% acumulado\"] =  agrupado[\"%\"].cumsum() \n",
        "\n",
        "ranking = agrupado.sort_values(by=\"2025 - Valor US$ FOB\",ascending=False)\n",
        "\n",
        "top80 = agrupado[agrupado[\"% acumulado\"] <= 80]\n",
        "print(top80)\n",
        "\n",
        "plt.figure(figsize=(12, 6))\n",
        "plt.bar(top80[\"Descrição NCM\"], top80[\"2025 - Valor US$ FOB\"])\n",
        "plt.xticks(rotation=75, ha=\"right\")\n",
        "plt.title(\"Exportações - Produtos que representam 80% do total\")\n",
        "plt.ylabel(\"Valor US$ FOB (2025)\")\n",
        "plt.tight_layout()\n",
        "plt.show()\n"
      ],
